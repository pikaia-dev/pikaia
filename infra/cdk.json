{
  "app": ".venv/bin/python app.py",
  "watch": {
    "include": ["**"],
    "exclude": [
      ".venv/**",
      "cdk.out/**",
      "**/__pycache__/**",
      "**/*.pyc",
      "**/*.pyo",
      "**/tests/**",
      "scripts/**",
      "cdk*.json",
      "pyproject.toml",
      "uv.lock",
      "package.json",
      ".python-version",
      "*.md"
    ]
  },
  "context": {
    "@aws-cdk/aws-lambda:recognizeLayerVersion": true,
    "@aws-cdk/core:checkSecretUsage": true,
    "@aws-cdk/core:target-partitions": ["aws"]
  }
}
