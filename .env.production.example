# =============================================================================
# Production Environment Secrets
# =============================================================================
# Copy this file to .env.production and fill in real values.
# NEVER commit .env.production to git!
# =============================================================================

# Django
DJANGO_SECRET_KEY=your-secret-key-here

# Stytch (from https://stytch.com/dashboard)
STYTCH_PROJECT_ID=project-live-xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx
STYTCH_SECRET=secret-live-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Stripe (from https://dashboard.stripe.com/apikeys)
STRIPE_SECRET_KEY=sk_live_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
STRIPE_PRICE_ID=price_xxxxxxxxxxxxxxxxxxxxxxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Resend (from https://resend.com/api-keys)
RESEND_API_KEY=re_xxxxxxxxxxxxxxxxxxxxxxxx

# WebAuthn / Passkeys (set to your production domain)
WEBAUTHN_RP_ID=app.example.com
WEBAUTHN_RP_NAME=Your App Name
WEBAUTHN_ORIGIN=https://app.example.com

# Stytch Trusted Auth Token (for passkey -> Stytch session)
# Create profile at https://stytch.com/dashboard/trusted-auth-tokens
STYTCH_TRUSTED_AUTH_PROFILE_ID=trusted-auth-profile-xxxxxxxx
STYTCH_TRUSTED_AUTH_AUDIENCE=stytch
STYTCH_TRUSTED_AUTH_ISSUER=passkey-auth
PASSKEY_JWT_PRIVATE_KEY=-----BEGIN PRIVATE KEY-----\nMIIEv...\n-----END PRIVATE KEY-----

# CORS (frontend URL - required for cross-origin requests)
CORS_ALLOWED_ORIGINS=https://app.example.com
