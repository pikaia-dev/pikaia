{
  "permissions": {
    "deny": [
      "read:.env",
      "read:.env.*",
      "read:secrets/**",
      "read:**/*.pem",
      "read:**/*.key",
      "run:git push*",
      "run:git remote*"
    ],
    "allow": [
      "read:.env.example",
      "read:.env.*.example",
      "run:uv run pytest*",
      "run:pnpm test*",
      "run:pnpm lint*",
      "run:uv run ruff*",
      "run:git status*",
      "run:git diff*",
      "run:git log*",
      "run:git show*",
      "run:git branch*",
      "run:git checkout*",
      "run:git add*",
      "run:git commit*",
      "run:git stash*"
    ]
  }
}
